{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 16,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Development Build",
            "description": "Standard development configuration with debug symbols and SIMD enabled",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_SCALAR_BASELINE": "ON",
                "ENABLE_SIMD": "ON",
                "ENABLE_DEBUG_MODE": "ON",
                "ENABLE_VERBOSE_LOGGING": "OFF",
                "DEFAULT_POOL_SIZE": "1000000",
                "TRADE_POOL_RATIO": "10",
                "MAX_PRICE_LEVELS": "4096",
                "BASE_PRICE": "50000",
                "MIN_PRICE_TICK": "1",
                "MAX_MARKET_DEPTH_LEVELS": "10",
                "BENCHMARK_ITERATIONS": "10000",
                "WARMUP_ITERATIONS": "1000"
            }
        },
        {
            "name": "release",
            "displayName": "Release Build",
            "description": "Optimized release build with SIMD enabled for production use",
